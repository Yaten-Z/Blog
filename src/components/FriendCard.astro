---
type Props = {
  name: string;
  href: string;
  description: string;
  avatar?: string;
};

const { name, href, description, avatar } = Astro.props;
---

<a 
  href={href} 
  target="_blank"
  class="flex flex-col p-4 rounded-lg border border-black/15 dark:border-white/20 bg-stone-50 dark:bg-stone-800 transition-colors duration-300 ease-in-out h-full">
  <div class="flex items-center gap-3 mb-2">
    {avatar && (
      <img 
        src={avatar} 
        alt={name}
        class="w-12 h-12 rounded-full object-cover flex-shrink-0"
      />
    )}
    <div class="font-semibold text-black dark:text-white line-clamp-2">
      {name}
    </div>
  </div>
  <div class="text-sm text-black/50 dark:text-white/75 flex-grow">
    {description}
  </div>
  <div class="text-xs text-black/35 dark:text-white/50 mt-2 truncate">
    {href}
  </div>
</a>